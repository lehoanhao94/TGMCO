@using TGMCO.Models;

@model List<PRODUCT>


@{
    TGMCO.Models.Entity.ProductModel m_PRODUCT = new TGMCO.Models.Entity.ProductModel();
}

<div id="Right-Slides">
    <div class="panel panel-default">
        <div id="Title-Right-Slides" class="panel-heading">
            <strong>@ViewBag.TITLE</strong>
        </div>
        <div id="Body-Right-Slides" class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="Slides">
                        @foreach(var product in Model)
                        {
                            <li class="news-item">
                                <div class="col-item">
                                    <div class="shape">
                                        <div class="shape-text">
                                            Mới
                                        </div>
                                    </div>
                                    <div class="photo">
                                        <img id="Image-Product" src="@Url.Content(@m_PRODUCT.GetImage1(Model[i].PRODUCT_ID))" class="img-responsive" alt="@product.PRODUCT_NAME" title="@product.PRODUCT_NAME" />
                                    </div>
                                    <div class="info">
                                        <div class="Name-Product">
                                            <h5>@product.PRODUCT_NAME</h5>
                                        </div>
                                        <div class="Price-Product">
                                            <h5 class="price-text-color">
                                                <strong>Giá: </strong>
                                                @string.Format("{0:0,0}", @product.UNIT_PRICE) VND
                                            </h5>
                                        </div>
                                        <div class="separator">
                                            <button type="button" class="btn btn-default btnShopNow" aria-label="Left Align">
                                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> <strong>Thêm vào giỏ</strong>
                                            </button>
                                        </div>
                                        <div class="clearfix">
                                        </div>
                                    </div>
                                </div>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="panel-footer">
        </div>
    </div>
</div>