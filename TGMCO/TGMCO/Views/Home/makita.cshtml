@using TGMCO.Models;

@model SUPPLIER

@{
    ViewBag.Title = "Tuấn Gia Minh | " + @Model.SUPPLIER_NAME;
    Layout = "~/Views/Shared/_PageLayout.cshtml";
    ViewBag.Description = "Nhà cung cấp dụng cụ xây dựng, dụng cụ điện " + Model.SUPPLIER_NAME;
}

@{
        <style>
            h1, #Main-Menu, #vgc_bc_off, .vgc_control_send, .brand,
            .Top-New-Product div, .btnShopNow, .modal-header {
                background-color: #018A9C !important;
                color: white;
            }

            #Register .btn, .brand, .Top-New-Product {
                color: white !important;
            }

            .nav-side-menu li:hover {
                border-left: 3px solid #018A9C;
            }

            .row-product {
                border: 2px solid #018A9C !important;
            }

            .btnShopNow:hover {
                background-color: #084C51 !important;
            }
        </style>
    
        
}

@section LeftMenu{
<div id="Left-Menu">
    <div class="nav-side-menu">
        <div class="brand makita-menu-header"><strong> MENU </strong></div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
                <li data-toggle="collapse" data-target="#abcde" class="collapsed">
                    <a><i class="fa fa-globe fa-lg"></i> TRANG CHỦ MAKITA </a>
                </li>
                <li data-toggle="collapse" data-target="#abcde" class="collapsed">
                    <a><i class="fa fa-globe fa-lg"></i> SẢN PHẨM MỚI </a>
                </li>
                <li data-toggle="collapse" data-target="#service" class="collapsed">
                    <a><i class="fa fa-globe fa-lg"></i> PHỤ KIỆN <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="service">
                    <li>Máy khoan</li>
                    <li>Máy mài</li>
                    <li>Máy cưa</li>
                    <li>Máy cắt </li>
                    <li>Máy bào</li>
                </ul>

                <li data-toggle="collapse" data-target="#abcd" class="collapsed">
                    <a><i class="fa fa-globe fa-lg"></i> CÔNG NGHỆ <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="abcd">
                    <li>Công nghệ AVT</li>
                    <li>Công nghệ MM4</li>
                    <li>Công nghệ LXT</li>
                    <li>Công nghệ DXT </li>
                    <li>Công nghệ XPT</li>
                </ul>
            </ul>
        </div>
    </div>
</div>

    @{
        Html.RenderAction("CategoryMenu", "Partial", new { id = Model.SUPPLIER_ID });
     }


}

<h1 style="text-align: center; padding-top: 0; margin-top: 0;margin-bottom: 5px;">@Model.SUPPLIER_NAME</h1>


<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="margin-bottom: 5px;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/ADMIN/SUPPLIERS/makita1.jpg" />
            <div class="carousel-caption">
                <h2>Thương hiệu máy khoan makita đến từ Nhật Bản</h2>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ADMIN/SUPPLIERS/makita2.jpg" />
            <div class="carousel-caption">
                <h2>Tuấn Gia Minh</h2>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/ADMIN/SUPPLIERS/makita3.jpg" />
            <div class="carousel-caption">
                <h2>Nhà phân phối Makita</h2>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

@{
    Html.RenderAction("HotProducts", "Partial", new { id = Model.SUPPLIER_ID, title = "SẢN PHẨM MỚI" });
